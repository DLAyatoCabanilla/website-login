                    <div class="res-seat">
                        <form action="#">
                            <label for="seating">Indoor Seating</label>
                            <input type="date" id="birthday" class="inpt1"name="birthday">
                            <input class="res-seat-button rst1" type="submit">
                          </form>
                    </div>
                    <div class="res-seat">
                        <form action="#" method="#">
                            <label for="seating">Outdoor Seating</label>
