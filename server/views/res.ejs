<div class="reserve">
  <p>Youre Reservation has been confirmed</p>
</div>
  <script>
    let reserve = document.querySelector(".reserve")
    let birthday = document.querySelector(".inpt")

    let resseat = document.querySelector(".rst")
    resseat.addEventListener('click',(e) => {
      e.preventDefault()
      if(birthday.value !== '') {
        reserve.textContent = "Youre Reservation has been confirmed"
        reserve.style.backgroundColor ="aquamarine"
        reserve.style.color = "black"

        reserve.style.display = 'block'
        setTimeout(() => {
        reserve.style.display = 'none'
        },2000)
      }else {
        reserve.textContent = "Please Reserve first"
        reserve.style.backgroundColor ="rgba(201, 23, 23, 0.824)"
        reserve.style.color = "#fff"
        reserve.style.display = 'block'
        setTimeout(() => {
        reserve.style.display = 'none'
        },2000)
      }
    })


